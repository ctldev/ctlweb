#!/usr/bin/env python3

import sys
import getopt

#erm√∂glicht es eine Component aus der Datenbank zu holen

opt = "a:"
long_opt = ["add=" ]
max_output_level = 2

def usage():
    print("Usage:", sys.argv[0], """[-a <modul>|--add=<modul>]""")
         
def main():
    try:
         opts, args = getopt.getopt(sys.argv[1:], opt, long_opt)
         
         
    except getopt.GetoptError as err:
        print(err)
        usage()
        sys.exit(2)
    output = None
    verbose = 0
    
    for o, a in opts:
        if o in ("-a", "--add"):
            print("add",o,a)
         
        
if __name__ == "__main__":
    main()            
            
