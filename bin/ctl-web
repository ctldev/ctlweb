#!/usr/bin/env python3
import sys
import getopt

#ctl-web wird von der Webinstanz auf den Cluster ausgef√ºhrt, um sich dort zu verifiziern

opt = "a:k:r:o"
long_opt = ["id=", "public key=", "id=", "overview" ]
max_output_level = 2

def usage():
    print("Usage:", sys.argv[0], """[-a <id>| --a=<id> 
         \t [-k <public key> --key=<public key>]
         \t [-r <id> | --remove=<>]
         \t [-o | --overview] """)
         
def main():
    try:
         opts, args = getopt.getopt(sys.argv[1:], opt, long_opt)
         
         
    except getopt.GetoptError as err:
        print(err)
        usage()
        sys.exit(2)
    output = None
    verbose = 0
    
    for o, a in opts:
        if o in ("-a", "--id"):
            print("id",o,a)
                   
        elif o in ("-k", "--public key"):
            print("public key",o,a)  
        
        elif o in ("-r", "--id"):
            print("id",o,a)
        
        elif o in ("-o", "--"):
            print("doxygen",o,a)           

if __name__ == "__main__":
    main()            
           


