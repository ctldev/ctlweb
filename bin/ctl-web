#!/bin/bash
TEMP=`getopt -o a:k:r:o --long a-long:,k-long:,r-long:,o-long: \
     -n 'example.bash' -- "$@"`

if [ $? != 0 ] ; then echo "Keine gültige Eingabe!" >&2 ; exit 1 ; fi

addfunction(){
    echo "ich adde($2) "
    exit
}

removefunction(){
    echo " ich lösche($2)"
    exit
}

keyfunction(){
    echo "ich verwende den key ($2)"
    exit
}


overviewfunction(){
    echo "ich liefere den Überblick"  
    exit
}

 

while true ; do
    case "$1" in 
        -a|--a) addfunction $* ; shift ;;  
        -k|--k) keyfunction $* ;shift  ;;
        -r|--r) removefunction $* ; shift ;;
        -o|--o) overviewfunction $* ; shift ;;
        --) break; shift ;;
        
    esac
done       




