#!/usr/bin/env python3
import sys
import getopt

#generiert ein Manifest f√ºr Compontent

opt = "f:d:vx"
long_opt = ["file=", "folder=", "version=", "doxygen=" ]
max_output_level = 2

def usage():
    print("Usage:", sys.argv[0], """[-f <file>| --file<file> 
         \t [-d <folder> --folder=<folder>]
         \t [-v | --version]
         \t [-x | --doxygen] """)
         
def main():
    try:
         opts, args = getopt.getopt(sys.argv[1:], opt, long_opt)
         
         
    except getopt.GetoptError as err:
        print(err)
        usage()
        sys.exit(2)
    output = None
    verbose = 0
    
    for o, a in opts:
        if o in ("-f", "--file"):
            print("file",o,a)
                   
        elif o in ("-d", "--folder"):
            print("folder",o,a)  
        
        elif o in ("-v", "--version"):
            print("version",o,a)
        
        elif o in ("-x", "--doxygen"):
            print("doxygen",o,a)           

if __name__ == "__main__":
    main()            
            
